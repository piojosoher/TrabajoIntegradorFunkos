<!DOCTYPE html>
<html lang="en">
    <%-include("partials/head")%>
    <body>
        <%-include("partials/header")%>
        <main class="container">
            <section class="item">
                <picture class="item__img card-item__cover">
                    <img class="card-item__img--front" src=<%=producto.img_front%> alt=<%=producto.product_description%>>
                    <img class="card-item__img--back" src=<%=producto.img_back%> alt=<%=producto.product_description%> en caja>
                </picture>
                <article class="item__info">
                    <p class="item__licence"><%=producto.licence_name%></p>
                    <h3 class="item__name"><%=producto.product_name%></h3>
                    <p class="item__description"><%=producto.product_description%></p>
                    <p class="item__price"><%=producto.product_price%></p>
                    <form class="item__cart" action="/shop">
                        <button class="item__quantity" id="subtract" type="button">-</button>
                        <input id="quantity" type="text" name="quantity" class="item__input" placeholder="0">
                        <button id="add" class="item__quantity" type="button">+</button>
                        <button class="item__submit btn btn--primary btn--medium" id="addToCartButton" data-product-id="<%= producto.product_id %>">Agregar al carrito</button>
                    </form>
                    <p class="item__promo">
                        <a href="#">Ver métodos de pago</a>
                        - 3 CUOTAS SIN INTERÉS
                    </p>
                </article>
            </section>
            <%- include('components/slider') %>
        </main>
        <%-include("partials/footer")%>
        <script src="../../js/item.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
        <script>
            new Glide('.glide',
            {
                type: 'carousel',
                startAt: 0,
                perView: 3,
                gap: 30,
                autoplay: 3000, 
                breakpoints: {
                    991: {
                        perView: 2
                        },
                    768: {
                        perView: 1
                    }
                }
            }
        ).mount();
        </script>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="/js/carrito.js"></script>
    </body>
</html>