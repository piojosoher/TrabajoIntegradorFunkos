<!DOCTYPE html>
<html lang="es">
    <%-include("partials/head")%>
    <body>
        <%-include("partials/header")%>       
        <section class="hero">
            <article class="hero__content container">
                <h3 class="hero__title">Nuevos Ingresos</h3>
                <p class="hero__text">Descubrí el próximo Funko Pop de tu colección</p>
                <a class="hero__link" href="/Shop">SHOP</a>
            </article>
        </section>
        <main class="main-container">
            <% licences.forEach( licence => { %>
                <section class="collection container">
                    <article class="collection__content">
                        <h3 class="collection__title"><%=licence.licence_descripcion%></h3>
                        <p class="collection__text"><%=licence.licence_texto%></p>
                        <a class="collection__link" href="/shop?Lic=<%=licence.licence_name%>">VER COLECCIÓN</a>
                    </article>
                    <picture class="collection__cover">
                        <img src=<%=licence.licence_img%>
                            alt=<%=licence.licence_img_description%>>
                    </picture>
                </section>
            <% }); %>
            <%- include('components/slider') %>
        </main>
        
        <%-include("partials/footer")%>

        <!--script src="./js/template.js"></script-->
        <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
        <script>
            new Glide('.glide',
                {
                    type: 'carousel',
                    startAt: 0,
                    perView: 3,
                    gap: 30,
                    autoplay: 3000,
                    breakpoints: {
                        991: {
                            perView: 2
                        },
                        768: {
                            perView: 1
                        }
                    }
                }
            ).mount();
        </script>
    </body>
</html>